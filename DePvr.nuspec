<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>DePvr</id>
    <version>1.1.0</version>
    <description>Decodes PVR files and exports to Bitmap or image file.</description>
    <authors>Siketyan</authors>
    <projectUrl>https://github.com/Siketyan/DePvr</projectUrl>
    <licenseUrl>https://github.com/Siketyan/DePvr/blob/master/LICENSE.md</licenseUrl>
    <tags>dotnet-framework csharp-library pvr bitmap windows</tags>
    <packageTypes>
      <packageType name="Dependency" />
    </packageTypes>
    <references>
      <group targetFramework="net471">
        <reference file="DePvr.dll" />
      </group>
    </references>
    <contentFiles>
      <files include="content\LICENSE_POWERVR_TOOLS.txt" buildAction="Content" copyToOutput="true" />
    </contentFiles>
